<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/notif_miptext_bg"
    android:padding="6dp">

    <ImageView
        android:id="@+id/mp_albumart"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_weight="0"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/t_format_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:shadowColor="#FFFFFF"
                android:shadowRadius="10"
                android:text="贐の鳥　（アイドルマスターミリオンライブアニメスぺシアル）" />

            <TextView
                android:id="@+id/mp_currentTime"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:maxLines="2"
                android:text="00:00 / 00:00"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mp_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ellipsize="end"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="10"
            android:text="iDOLMASTER MILLION LIVE MASTER 10 - D/Zeal"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/mp_timebar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:progress="25"
            android:progressDrawable="@drawable/mp_xmb_progressbar" />
    </LinearLayout>
</LinearLayout>
